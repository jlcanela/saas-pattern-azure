{
  "tasks": {
    "dev": "deno task dev:api & deno task dev:vite",
    "dev:api": "deno run --watch --allow-env --allow-net --allow-read apps/api/main.ts",
    "dev:vite": "cd apps/web && deno run -A npm:vite",
    "build": "cd apps/web && deno run -A npm:vite build",
    "clean": "rm -rf dist & rm -rf node_modules",
    "serve": {
      "command": "deno task dev:api",
      "description": "Run the build, and then start the API server",
      "dependencies": ["deno task build"]
    }
  },
  "workspace": ["./apps/api", "./apps/web", "./packages/common"],
  "imports": {
    "@hono/hono": "jsr:@hono/hono@^4.6.16",
    "@/common/": "./packages/common/"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "solid-js",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "deno.ns"]
  },
  "nodeModulesDir": "auto"
}
