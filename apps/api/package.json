{
  "name": "api",
  "type": "module",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build2": "tsc",
    "build": "tsup && pnpm copy-package-json && cp -R node_modules dist",
    "copy-package-json": "tsx scripts/copy-package-json.ts",
    "start": "pnpm run build && node dist/index.js ../web/dist",
    "lint": "eslint . -c eslint.config.mjs",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "infra": "podman run --env AZURE_COSMOS_EMULATOR_IP_ADDRESS_OVERRIDE=127.0.0.1 --rm --name cosmosdb-emulator --detach --publish 8081:8081 --publish 1234:1234 mcr.microsoft.com/cosmosdb/linux/azure-cosmos-emulator:vnext-preview && podman run --name zipkin2 --rm -d -p 9411:9411 -e JAVA_OPTS='-Dlogging.level.zipkin2=DEBUG' openzipkin/zipkin",
    "infra-stop": "podman stop cosmosdb-emulator && podman stop zipkin2",
    "predev2": "podman start cosmosdb-emulator 2>/dev/null || podman run --env AZURE_COSMOS_EMULATOR_IP_ADDRESS_OVERRIDE=127.0.0.1 --rm --name cosmosdb-emulator --detach --publish 8081:8081 --publish 1234:1234 mcr.microsoft.com/cosmosdb/linux/azure-cosmos-emulator:vnext-preview && podman start zipkin2 2>/dev/null || podman run --name zipkin2 -d -p 9411:9411 -e JAVA_OPTS='-Dlogging.level.zipkin2=DEBUG' openzipkin/zipkin",
    "dev": "NODE_OPTIONS='--experimental-wasm-modules --disable-warning=ExperimentalWarning' tsx --watch src/index.ts ../web/dist",
    "postdev2": "podman stop cosmosdb-emulator && podman stop zipkin2",
    "test": "vitest  --disableConsoleIntercept=false --watch",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@azure/cosmos": "^4.4.1",
    "@cedar-policy/cedar-wasm": "4.3.0",
    "@effect/cli": "^0.59.21",
    "@effect/experimental": "^0.44.21",
    "@effect/opentelemetry": "^0.50.6",
    "@effect/platform": "^0.80.21",
    "@effect/platform-node": "^0.77.11",
    "@grpc/grpc-js": "^1.13.4",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/api-logs": "^0.202.0",
    "@opentelemetry/exporter-logs-otlp-http": "^0.202.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.202.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.202.0",
    "@opentelemetry/exporter-zipkin": "^2.0.1",
    "@opentelemetry/sdk-logs": "^0.202.0",
    "@opentelemetry/sdk-metrics": "^2.0.1",
    "@opentelemetry/sdk-trace-base": "^2.0.1",
    "@opentelemetry/sdk-trace-node": "^2.0.1",
    "@opentelemetry/sdk-trace-web": "^2.0.1",
    "@opentelemetry/semantic-conventions": "^1.34.0",
    "common": "file:../../packages/common",
    "dotenv": "^16.5.0",
    "effect": "^3.16.3",
    "json-diff-ts": "^4.3.0",
    "protobufjs": "^7.5.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.27.2",
    "@babel/core": "^7.27.4",
    "@babel/plugin-transform-export-namespace-from": "^7.27.1",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@effect/build-utils": "^0.7.9",
    "@effect/language-service": "^0.1.0",
    "@effect/vitest": "^0.17.8",
    "@tsconfig/node18": "^18.2.4",
    "@types/node": "^22.15.29",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "2.1.9",
    "eslint-config-custom": "workspace:*",
    "fast-json-patch": "^3.1.1",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite-plugin-top-level-await": "^1.5.0",
    "vite-plugin-wasm": "^3.4.1",
    "vitest": "^2.1.9"
  }
}
